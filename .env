# SBM AI CRM System Environment Configuration

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./sbm_crm.db
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=sbm-super-secret-key-change-in-production-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/sbm_crm.log

# AI/ML Configuration
MODEL_PATH=./models
BATCH_SIZE=32
MAX_CLUSTERS=20
MIN_CLUSTER_SIZE=50

# Camera System Configuration
FRAME_RATE=30
DETECTION_CONFIDENCE=0.7

# External APIs (Optional)
OPENAI_API_KEY=your-openai-key-here
WEATHER_API_KEY=your-weather-key-here